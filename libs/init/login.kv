<Login>:
    name: "login"
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            canvas.before:
                Color:
                    rgba: app.theme_cls.primary_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0, 0, dp(100), dp(100)]

        BoxLayout:

    MsCard:
        orientation: "vertical"
        radius:[20]
        size_hint_x:.9
        size_hint_y: .7
        padding: dp(20)
        elevation: 8
        pos_hint:{"center_x":.5, "center_y":.5}
        MDLabel:
            font_name:"assets/ua_scroonge.ttf"
            text: "nocenstore\nadmin login"
            halign: "center"
            color: app.theme_cls.primary_color
        MDGridLayout:
            cols:1
            spacing: dp(20)

            MDTextField:
                mode: "rectangle"
                hint_text:"username:"

            MDTextField:
                hint_text:"password"
                mode: "rectangle"


        MDRoundFlatIconButton:
            font_name:"assets/ua_scroonge.ttf"
            text:"login"
            icon:"login"
            pos_hint:{"center_x":.5}
            on_release:
                app.check_add_screen("libs/main/home.kv", "Factory.Home()", "home", "from libs.libpy import home")
                root.manager.current = "home"

