<Sold>:
    name:"sold"
    BoxLayout:
        id: swiper
        opacity:0
        orientation: "vertical"
        spacing: dp(10)
        padding:[0, dp(10), 0, dp(10)]
        MDSwiper:
            id:swipe
            items_spacing: "20sp"
        MDSeparator:
        MDSwiper:
            id:swipe2
            items_spacing: "20sp"

    Label:
        id: icolabel
        markup: True
        text:f"{icon('icon-marketo', int(dp(128)), '424242', 'icomoon')}"