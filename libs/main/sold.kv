<MySwiperSold>
    source:""
    text:

    RelativeLayout:

        FitImage:
            source: root.source
            radius: [dp(20)]

        MDBoxLayout:
            adaptive_height: True
            padding: ["10dp", 0, "10dp", 0]
            canvas:
                Color:
                    rgba: 0,0,0,.4
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius:[0,0,dp(20),dp(20)]

            MDLabel:
                text: f"[size={int(dp(17))}]{root.text} (sold)[/size]"
                font_name:"assets/ua_scroonge.ttf"
                size_hint_y: None
                markup: True
                height: self.texture_size[1]
                opposite_colors: True
                pos_hint:{"center_y":.5}

            M_MDIconButton:
                id: icon
                icon:f"{icon('icon-trash', int(dp(32)), 'ffffff', 'fontello')}"

